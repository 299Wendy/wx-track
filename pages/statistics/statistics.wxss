.header {
    box-sizing: border-box;
    position: fixed;
    top: 0;
    left: 0;
    display: table;
    width: 100%;
    height:6%;
    background-color: #fff;
    border-radius: 1rpx;
    z-index:999;
}
.header-item {
    display: table-cell;
    font-size: 10pt;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-left: 50rpx;
    background-color: #f8f8f8;
}

.tab-header-active {
    border-bottom: 4rpx solid  #47a86c;
    color:#47a86c ;
}
.option-type {
    top: 90rpx;
