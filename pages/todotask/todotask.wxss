.header {
    box-sizing: border-box;
    position: fixed;
    top: 0;
    left: 0;
    display: table;
    width: 100%;
    height:6%;
    background-color: #fff;
    border-radius: 1rpx;
    z-index:999;
}
.header-item {
    display: table-cell;
    font-size: 10pt;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-left: 50rpx;
    background-color: #f8f8f8;
}

.tab-header-active {
    border-bottom: 4rpx solid  #47a86c;
    color:#47a86c ;
}

.searchcion {  
  margin: 10rpx 10rpx;  
  position: absolute;  
  left:145rpx;  
  z-index: 2;  
  width: 20px;  
  height: 20px;  
  text-align: center; 
  margin-left:20rpx;
margin-top:20rpx;
 
} 
.search-hd {
    position: fixed;
    top:100rpx;
    width: 730rpx; 
    height: 75rpx;
    background-color: white;
    box-sizing: border-box;
    z-index:99;
}
.search-area{  
  border: 1px solid #d0d0d0;  
  border-radius: 10rpx;  
  margin-left: 16rpx; 
  width: 576rpx; 
  height: 75rpx;

}
.search-number{
  background-color: #ccc;
  font-size: 26rpx;
  margin-left:16rpx;
  margin-top:6rpx;
  }
.search-type {
    position: absolute;
    width: 120rpx;
    height: 75rpx;
    line-height: 75rpx;
    text-align: center;
    border-right: 1px solid #eee;
    font-size: 24rpx;
}

.search-txt {
    box-sizing: border-box;
    width: 100%;
    height: 75rpx;
    padding-left: 200rpx;
    padding-right: 120rpx;
    font-size: 28rpx; 
}
.cancle-btn {
    position: absolute;
    top: 0rpx;
    right: 0;
    height: 75rpx;
    width: 120rpx;
    text-align: center;
    line-height: 75rpx;
    font-size: 28rpx; 
}
.tab-content-item {
    box-sizing: border-box;
    padding: 20rpx;
}
/*整体列表*/
.carts-list {
  display: flex;
  flex-direction: column;
  padding: 20rpx 40rpx;
}
/*每行单元格*/
.carts-item {
  display: flex;
  flex-direction: row;
  height:150rpx;
  /*width属性解决标题文字太短而缩略图偏移*/
  width:100%;
  border-bottom: 1px solid #eee;
  padding: 30rpx 0;
}
/*左部图片*/
.carts-image {
  width:150rpx;
  height:150rpx;
}
 
 
/*右部描述*/
.carts-text {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-info{
    display: flex;    
    margin-bottom: 8rpx   
    
}
.tab-content {
    margin-top: 200rpx;
    height: 2000rpx;
    z-index: -999
}

.b1{
  border-bottom: 1rpx solid #ddd;
}

.list-txt {
    margin-bottom: 15rpx;
    color: #666;
    font-size: 24rpx;
}
.list-title {
    font-size: 30rpx;
    color: #333;
    border-bottom:1rpx #999;
}

.source{
    color: #546379;
    font-size: 18px;
    width: 510rpx; 
    margin-left: 15rpx   
}
.rightView{
  display: flex;
  align-items: center;
  margin-right: 10rpx;
  margin-left: 10rpx;
}
.rightImage{
  width: 80rpx;
  height: 80rpx;
}








